<nav>
    <div class="btn" id="toggle-btn">
        <div class="btn-outline btn-outline-1"></div>
        <div class="btn-outline btn-outline-2"></div>
        <div class="hamburger">
            <span></span>
        </div>
    </div>

    <div class="nav-links">

        <ul class="borderXwidth">
            <li>
                <a href="/"><span>I.</span>Index</a>
            </li>

            <li>
                <a href="/projects"><span>II.</span>Work</a>
            </li>
            
            <li>
                <a href="/about"><span>III.</span>About</a>
            </li>

            <li>
                <a href="/contact"><span>IV.</span>Contact</a>
            </li>
        </ul>

    </div>

</nav>

<script>

    const menuHamburger = document.querySelector(".hamburger")
    const navLinks = document.querySelector(".nav-links")

    menuHamburger.addEventListener('click',()=>{
    navLinks.classList.toggle('mobile-menu'),
    menuHamburger.classList.toggle('active')
    })

</script>

<style>

    #toggle-btn {
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 2em;
        z-index: 30;
        cursor: pointer;
    }

    .btn-outline {
        position: absolute;
        width: 80px;
        height: 80px;
        border: 1px solid var(--blue);
    }

    .btn-outline-1 {
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        animation: morph 4s linear infinite;
    }

    .btn-outline-2 {
        border-radius: 53% 47% 43% 57% / 51% 39% 61% 34%;
    }

    @keyframes morph {
        0% {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }

        50% {
            border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
        }

        100% {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }
    }

    .hamburger {
        position: relative;
        width: 20px;
        height: 20px;
        z-index: 3;
    }

    .hamburger span {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        display: inline-block;
        width: 24px;
        height: 1.25px;
        background: var(--blue);
        transition: transform 0.25s ease-in-out;
    }

    .hamburger span::before {
        position: absolute;
        right: 0;
        display: inline-block;
        content: "";
        width: 18px;
        height: 1.25px;
        background: var(--blue);
        transform: translateY(-4px);
        transition: transform 0.25s;
    }

    .hamburger:hover {
        span {
            transform: translate(6px, -50%);
        }
        span::before {
            transform: translate(-16px, -4px);
        }
    }

    .borderXwidth a:before, .borderXwidth a:after
{
    position: absolute;
    opacity: 0;
    width: 0%;
    height: 2px;
    content: '';
    background: var(--cadetgray);
    transition: all 0.3s;
}

.borderXwidth a:before
{
    left: 0px;
    top: 0px;
}

.borderXwidth a:after
{
    right: 0px;
    bottom: 0px;
}

.borderXwidth a:hover:before, .borderXwidth a:hover:after
{
    opacity: 1;
    width: 100%;
}

    .nav-links {
        margin-left: -100%;
        position: fixed;
        overflow-y: hidden;
        top: 0;
        left: 0;
        background: radial-gradient(circle, rgba(34,34,34,1) 0%, rgba(10,10,10,1) 100%);
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease;
    }

    .nav-links.mobile-menu {
        margin-left: 0;
        z-index: 10;
        background: radial-gradient(circle, rgba(34,34,34,1) 0%, rgba(10,10,10,1) 100%);
    }

    .nav-links ul {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .nav-links ul li {
        font-family: 'ZTChintzy';
        font-size:4rem;
        text-transform: uppercase;
        margin: -0.1em;
        opacity: 0;
        transform: translateX(-50vw);
    }

    .nav-links.mobile-menu > ul > li {
        opacity: 1;
        transform: translateX(0px);
        transition: opacity 0.7s ease 0s, transform 0.7s ease 0s;
    }


    .nav-links.mobile-menu > ul > li:nth-child(1),
    .nav-links.mobile-menu > ul > li:nth-child(3)  {
        transform: translateX(1em);
    }

    .nav-links ul li span {
        margin-right: 1em;
        font-family: 'NeueRegradeExtrabold';
        font-size: 1rem;
        color: var(--beige)
    }

    .nav-links.mobile-menu > ul > li > a,
    .nav-links.mobile-menu > ul > li > a:visited {
        color: var(--white);
        cursor: pointer;
    }


    .nav-links.mobile-menu > ul > li a:hover {
        color: var(--cadetgray);
    }

    @media screen and (min-width: 1px) 
	and (max-width: 320px) {
		#toggle-btn {
            margin: 1em;
        }
        .nav-links ul li {
            font-size: 1.9rem;
        }
    }

    @media screen and (min-width: 321px) 
	and (max-width: 425px) {
		#toggle-btn {
            margin: 1em;
        }
        .nav-links ul li {
            font-size: 2.5rem;
        }
    }

    @media screen and (min-width: 426px) 
    and (max-width: 1024px) {
        .nav-links ul li {
            font-size: 3.8rem;
        } 
    }
    
</style>